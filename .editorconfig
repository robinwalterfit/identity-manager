# EditorConfig root:
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Base configuration for files
[*.{js,json,jsx,ts,tsx}]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# Markdown specific configuration
[*.{md,mdx}]
charset = utf-8
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

# YAML specific configuration
[*.{yaml,yml}]
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
